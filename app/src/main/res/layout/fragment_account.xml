<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/legoman"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:srcCompat="@drawable/ic_lego"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/legoman">
    </TextView>
    <TextView
        android:id="@+id/accountEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/accountName">
    </TextView>

    <TextView
        android:id="@+id/wishlistCountSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/accountEmail">
    </TextView>

    <TextView
        android:id="@+id/wishlistCountParts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/wishlistCountSets">
    </TextView>

</RelativeLayout>